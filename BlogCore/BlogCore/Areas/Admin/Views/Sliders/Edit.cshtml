@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar Slider";

}

<br />
<br />
<h3 class="text-center">Editar nuevo slider</h3>

<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row px-2 offset-1 border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

            <!-- Campo: Nombre -->
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <Label asp-for="Nombre"></Label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo: Estado -->
            <div class="form-group row">
                <div class="col-4">
                    <Label asp-for="Estado"></Label>
                </div>

                <div class="col-8">
                    <input asp-for="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            &nbsp;

            <!-- Campo: Subir archivo -->
            <div class="form-group row">
                <div class="col-4">
                    <Label asp-for="UrlImage"></Label>
                </div>

                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>
            

            &nbsp;

            <!-- Guardar -->
            <div class="form-group row">

                <div class="col">
                    <button type="submit" class="btn btn-primary from-control" asp-route-id="@Model.Id">Actualiazr</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary form-control">Regresar</a>
                </div>

            </div>

            &nbsp;

            &nbsp;

            <div class="col-4 pt-3">
                <img src="@Model.UrlImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9"
            </div>

        </div>

    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}