@model BlogCore.Models.ViewModels.ArticuloVM

@{
    ViewData["Title"] = "Editar Artículo";

}

<br />
<br />
<h3 class="text-center">Editar artículo</h3>


<!-- multipart/form-data permite la "subida" de archivos -->
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Articulo.Id" />
    <div class="row px-2 offset-1 border">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">

            <!-- Campo: Nombre -->
            <div class="form-group row">
                <div class="col-4">
                    <label class="col-4">
                        <Label asp-for="Articulo.Nombre"></Label>
                    </label>
                </div>

                <div class="col-8">
                    <input asp-for="Articulo.Nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" />
                    <span asp-validation-for="Articulo.Nombre" class="text-danger"></span>
                </div>
            </div>

            <!-- Campo: Descripción -->
            <div class="form-group row">
                <div class="col-4">
                    <Label asp-for="Articulo.Descripcion"></Label>
                </div>

                <div class="col-8">
                    <input asp-for="Articulo.Descripcion" class="form-control" placeholder="Ingrese el orden de la categoría" />
                    <span asp-validation-for="Articulo.Descripcion" class="text-danger"></span>
                </div>
            </div>

            &nbsp;

            <!-- Campo: Categoría -->
            <div class="form-group row mt-2">
                <div class="col-4">
                    <Label ="Categoría">Categoría</Label>
                </div>

                <div class="col-8">
                    @Html.DropDownListFor(m => m.Articulo.CategoriaId, Model.ListaCategorias, "-Favor de elegir una categoría-",
                    new {@class = "form-control"  })
                </div>
            </div>

            &nbsp;

            <!-- Campo: Subir archivo -->
            <div class="form-group row">
                <div class="col-4">
                    <Label asp-for="Articulo.UrlImage"></Label>
                </div>

                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                </div>
            </div>

            &nbsp;

            <!-- Guardar -->
            <div class="form-group row">

                <div class="col">
                    <button type="submit" class="btn btn-primary from-control" asp-route-id="@Model.Articulo.Id">Actualiazr</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-primary form-control">Regresar</a>
                </div>

            </div>

            &nbsp;

        </div>

        <div class="col-4 pt-3">
            <img src="@Model.Articulo.UrlImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9"
        </div>



    </div>

</form>
