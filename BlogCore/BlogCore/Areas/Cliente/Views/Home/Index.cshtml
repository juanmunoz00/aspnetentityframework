@model BlogCore.Models.ViewModels.HomeVM


<!-- Slider -->
<!-- Slider -->

<div class="row fondoTitulo mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1">Últimos Cursos y Tutoriales</h1>
    </div>
</div>

    @if(Model.ListaArticulos.Count() > 0)
    {
        <div class="row">
        @foreach( var articulo in Model.ListaArticulos.OrderBy( o => o.Id))
        {
            <div class="col-4" >
                <div class="card">
                    <img src="@articulo.UrlImage" class="img-thumbnail" width="100%">
                    <div class="card-body">
                        <h5 class="text-center">@articulo.Nombre</h5>
                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px" asp-route-id="@articulo.Id">
                            Más Información
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    }
    else
    {
        <p>No hay artículos a mostrar</p>
    }

